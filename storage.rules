rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Services images: allow authenticated admins to write, everyone to read
    match /services/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
                     exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }
  }
}

